<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
      <title>Registration</title>
      <link rel="stylesheet" href="css/registration.css">
      <link rel="preconnect" href="https://fonts.gstatic.com">
<link href="https://fonts.googleapis.com/css2?family=Merriweather&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
  </head>
  <div class="container regMainDiv ">
    <h1>REGISTRATION</h1>
    <form class="" action="/registration" method="post">
    <div class="container-fluid accountDiv">
      <hr>
      <h4>ACCOUNT DETAILS</h4>
      <hr>
      <label for="emailId">Email:</label>
      <input type="email" id="emailId" name="userEmailInput" value="">
      <label for="userPassword">Password:</label>
      <input type="password" name="userPasswordInput" value="" id="userPassword" onkeypress="return passwordChanged();" >
      <label for="userConfPassword">Confirm Password:</label>
      <input type="password" name="userConfPasswordInput" value="" id="userConfPassword">
      <div class="container strengthPass">
        <span class="passDetails">Password must contain atleast 1.8 Characters 2.One Upper case 3.One Lower case 4.One Number and 5.A Special Character</span>
        <span id="strength">Password Strength:Type Password</span>
      </div>
    </div>

    <div class="container-fluid personalDiv">
      <hr>
      <h4>PERSONAL DETAILS OF PATIENT</h4>
      <hr>
      <div class="container topPersonalDiv">
      <label for="nameInput">Full Name:</label>
      <input type="text" id="nameInput" name="userNameInput" value="">
      <label for="mobileNoInput">Mobile number:</label>
      <input type="text" id="ccInput" name="userCcInput" value="">
      <input type="text" name="userMobNoInput" value="" id="mobileNoInput">
      <div class="container addressDiv">
        <label for="userAddress" class="addressInput">Address:</label>
        <textarea name="userAddressInput" rows="3" class="addressInput" cols="40"></textarea>
      </div>
      </div>
      <div class="container-fluid midPersonalDiv">
      <label for="userCountry">Country:</label>
      <input type="text"  id="userCountry" name="userCountryInput">
      <label for="userState">State:</label>
      <input type="text" id="userState" name="userStateInput">
      </div>
      <div class="container-fluid bottomPersonalDiv">
      <label for="cityInput">City:</label>
      <input type="text" id="cityInput" name="userCityInput" value="" style="width:15rem;">
      <label for="zipInput" class="zipInput">Zip code:</label>
      <input type="text" id="zipInput" name="userZipInput" value="">
      </div>
    </div>
    <div class="container-fluid otherPersonalDiv">
      <hr>
      <h4>OTHER DETAILS OF PATIENTS</h4>
      <hr>
      <div class="container topPersonalDiv">
      <label for="genderInput">Gender:</label>
      <input class="form-check-input" type="radio" value="Male" name="userGenderInput" id="userMale" >
      <label class="form-check-label" for="userMale">Male</label>
      <input class="form-check-input" type="radio" value="Female" name="userGenderInput" id="userFemale" >
      <label class="form-check-label" for="userFemale">Female</label>
      <input class="form-check-input" type="radio" value="Others" name="userGenderInput" id="userOthers" >
      <label class="form-check-label" for="userOthers">Others</label>
      <label for="dobInput" id="dob">Date of Birth:</label>
      <input type="date" name="userDobInput" value="" id="dobInput">
      </div>
      <div class="container-fluid midPersonalDiv">
      <label for="userBgroup">Blood group:</label>
      <select class="form-control" id="userBgroup" name="userBgroupInput">
      <option>A+</option>
      <option>A-</option>
      <option>B+</option>
      <option>B-</option>
      <option>AB+</option>
      <option>AB-</option>
      <option>O+</option>
      <option>O-</option>
      </select>
      <label for="marital" id="mstatus">Marital Status:</label>
      <input class="form-check-input" type="radio"  value="Single" name="userStatusInput" id="userSingle">
      <label class="form-check-label" for="userSingle">Single</label>
      <input class="form-check-input" type="radio" value="Married" name="userStatusInput" id="userMarried">
      <label class="form-check-label" for="userMarried">Married</label>
      </div>
      <div class="container-fluid bottomPersonalDiv">
      <label for="userInsurance">Insurance Number:</label>
      <input type="text" id="userInsurance" name="userInoInput" value="">
      <label for="userExpDate" id="expDt">Expiary Date:</label>
      <input type="date" name="userExpDateInput" value="" id="userExpDate" >
    </div>
  </div>
  <hr>
    <button type="submit" name="buttonSubmit" class="btn btn-primary" id="regBtn" onclick="checkpassword();">Register</button>
    </form>
  </div>
  <script language="javascript">
  let confPass=document.getElementById("userConfPassword");
  let pwd = document.getElementById("userPassword");
  let check=document.getElementById("matchPass");
  function checkpassword()
  {
    if(pwd.valu!=confPass.value)
    {
      alert("password mismatch");
    }
  }


    function passwordChanged() {
        var strength = document.getElementById('strength');
        var strongRegex = new RegExp("^(?=.{14,})(?=.*[A-Z])(?=.*[a-z])(?=.*[0-9])(?=.*\\W).*$", "g");
        var mediumRegex = new RegExp("^(?=.{10,})(((?=.*[A-Z])(?=.*[a-z]))|((?=.*[A-Z])(?=.*[0-9]))|((?=.*[a-z])(?=.*[0-9]))).*$", "g");
        var enoughRegex = new RegExp("(?=.{8,}).*", "g");
        var pwd = document.getElementById("userPassword");
        if (pwd.value.length == 0) {
            strength.innerHTML = 'Type Password';
        } else if (false == enoughRegex.test(pwd.value)) {
            strength.innerHTML = 'Password Strength:More Characters';
        } else if (strongRegex.test(pwd.value)) {
            strength.innerHTML = '<span style="color:green">Password Strength:Strong!</span>';
        } else if (mediumRegex.test(pwd.value)) {
            strength.innerHTML = '<span style="color:orange">Password Strength:Medium!</span>';
        } else {
            strength.innerHTML = '<span style="color:red">Password Strength:Weak!</span>';
        }
    }
</script>
